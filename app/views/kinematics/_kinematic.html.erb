<div id="<%= dom_id kinematic %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= kinematic.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this kinematic", kinematic, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this kinematic", edit_kinematic_path(kinematic), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
