<div id="<%= dom_id printer %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= printer.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Print size x:</strong>
    <%= printer.print_size_x %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Print size y:</strong>
    <%= printer.print_size_y %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Print size z:</strong>
    <%= printer.print_size_z %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this printer", printer, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this printer", edit_printer_path(printer), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
